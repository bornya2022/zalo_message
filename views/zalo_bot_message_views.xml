<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="zalo_bot_message_view_action" model="ir.actions.act_window">
            <field name="name">zalo_bot_message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zalo.bot.message</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="zalo_bot_message_view_tree" model="ir.ui.view">
            <field name="name">zalo_bot_message_view_tree</field>
            <field name="model">zalo.bot.message</field>
            <field name="arch" type="xml">
                <tree string="zalo_bot_message_tree">
                    <field name="follower_id"/>
                </tree>
            </field>
        </record>

        <menuitem id="zalo_bot_message_menu"
                  name="Bot Message"
                  action="zalo_bot_message_view_action"
                  parent="zalo_message_menu_root"
        sequence="2"/>
    </data>
</odoo>